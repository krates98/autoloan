<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>AutoLoan Software</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.ico" />
    <!-- CSS only -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
      crossorigin="anonymous"
    />

    <!-- JS, Popper.js, and jQuery -->
    <script
      src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
      integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
      crossorigin="anonymous"
    ></script>
    <link
      rel="stylesheet"
      type="text/css"
      media="screen"
      href="/stylesheets/style.css"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-md navbar-light bg-light">
      <a class="navbar-brand" href="/">AutoLoan</a>
      <button
        class="navbar-toggler"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if(currentUser){ %> <% if(currentUser.isAdmin){ %>
          <li class="nav-item active">
            <a class="nav-link" href="/admin">Admin</a>
          </li>
          <% } %> <% if(currentUser.isAdmin || currentUser.isMod){ %>
          <li class="nav-item">
            <a class="nav-link" href="/users/mod">Moderate</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/salary">Salary</a>
          </li>
          <% } %>
        </ul>
        <ul class="navbar-nav mr-sm-2">
          <li class="nav-item">
            <a class="nav-link" href="/users/attendance">Attendance</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/<%= currentUser._id %>">Profile</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/logout">Sign Out</a>
          </li>
        </ul>
        <% } %>
      </div>
    </nav>
    <% if(error && error.length > 0){%>
    <div class="container alert alert-danger" role="alert"><%= error%></div>
    <% } if(success && success.length > 0) { %>
    <div class="container alert alert-success" role="alert"><%= success %></div>
    <% } %> <% if(currentUser && currentUser.isAdmin){ %>
    <div class="container adminNav">
      <nav
        class="navbar navbar-expand-lg navbar-light"
        style="background-color: #e3f2fd"
      >
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/admin"
                >Home <span class="sr-only">(current)</span></a
              >
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                id="navbarDropdown"
                role="button"
                data-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false"
              >
                Work
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="/admin/todaywork"
                  >Today's Work</a
                >
                <a class="dropdown-item" href="/admin/yesterdaywork"
                  >Yesterday Work</a
                >
                <a class="dropdown-item" href="/admin/userwork"
                  >Individual Work</a
                >
              </div>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/dataleft">Data Left</a>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                id="navbarDropdown"
                role="button"
                data-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false"
              >
                Attendance/Salary
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="/admin/attendance">Attendance</a>
                <a class="dropdown-item" href="/admin/lastmonth"
                  >L/M Attendance</a
                >
                <a class="dropdown-item" href="/admin/salary">Salary</a>
                <a class="dropdown-item" href="/admin/gensalary"
                  >Generate Salary</a
                >
                <a class="dropdown-item" href="/admin/gensalarylm"
                  >L/M Salary</a
                >
              </div>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                id="navbarDropdown"
                role="button"
                data-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false"
              >
                Data Upload
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="/admin/uploademail"
                  >Upload Emails</a
                >
                <a class="dropdown-item" href="/admin/uploaddata"
                  >Upload Data</a
                >
              </div>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/offers">Add Offers</a>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                id="navbarDropdown"
                role="button"
                data-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false"
              >
                Hitlist
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="/admin/hitlist">Hitlist</a>
                <a class="dropdown-item" href="/admin/checkhitlist"
                  >Check Hitlist</a
                >
              </div>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/deleteips">Delete IPs</a>
            </li>
          </ul>
        </div>
      </nav>
    </div>

    <% } %>
  </body>
</html>
